<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.internassigment.fragments.WorkShopDash">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/course_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:fontFamily="@font/allerta"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="30sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Learn\nAndroid\nDevelopment" />

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/Courses_image"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/hand_image"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/course_title" />

        <TextView
            android:id="@+id/why_this_course"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/allerta"
            android:padding="10dp"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="25sp"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/Courses_image"
            tools:text="Why To Learn Android Development?" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/key_recycle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="@id/why_this_course"
            app:layout_constraintRight_toRightOf="@id/why_this_course"
            app:layout_constraintTop_toBottomOf="@id/why_this_course" />
        <Button
            android:id="@+id/apply_work_shop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:backgroundTint="@color/cheery_red"
            android:elevation="5dp"
            app:layout_constraintTop_toBottomOf="@id/key_recycle"
            app:layout_constraintRight_toRightOf="@id/key_recycle"
            app:layout_constraintLeft_toLeftOf="@id/key_recycle"
            app:layout_constraintBottom_toBottomOf="parent"
            android:padding="20dp"
            android:text="@string/apply_now"
            android:textStyle="normal" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>